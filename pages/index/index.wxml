  <view class="selector">
    <navigator url="url" class="selectorNav">
        <view class="selectorNavT">
            <image src="../../images/u177.png" class="selectorImg"></image>
            <text>个人服务</text>
        </view>  
    </navigator>
    <view class="selectorNav">
        <view class="selectorNavT">
            <image src="../../images/u179.png" class="selectorImg"></image>
            <text>对公服务</text>
        </view>  
    </view>
    <view class="selectorNav">
        <view class="selectorNavT">
            <image src="../../images/u181.png" class="selectorImg"></image>
            <text>其他服务</text>
        </view>  
    </view>
    <navigator url="../search/search" class="selectorNav">
        <view class="selectorNavT">
            <image src="../../images/u183.png" class="selectorImg"></image>
            <text>全部商家</text>
        </view>  
    </navigator>
</view>
  <view class="index-home">附近商家</view>
  <scroll-view scroll-y="true" class="scroll-content">
    <block wx:for="{{showList}}" wx:key="i">
      <navigator class="show" url="../other/other?title={{item.title}}" hover-class="navigator-hover">
      <image style="width:80px;height:80px" src="{{item.src}}"></image>
        <view class="show-list">
          <text class="title">{{item.title}}</text>
          <text>服务类型：{{item.ser}}</text>
          <view class="show-list-last">
          <image class="u145_img" src="/images/u145.png"  mode="scaleToFill"></image>
           {{item.distance}} 
           <image class="u151_img" src="/images/u151.png" mode="scaleToFill"></image>
            {{item.heart}}
            </view>
        </view>
      </navigator>
    </block>
  </scroll-view>
  
</view>