      <text class="index-head-address">{{name}}</text>
      <image class="u109_img" src="/images/u109.png" mode="scaleToFill" ></image>
    </view>
    <view class="index-head search" >
    <image class="u105_img" src="/images/u105.png" mode="scaleToFill"></image>
      <input placeholder="家政服务" bindinput="bindKeyInput" />
    </view>
  </view>
