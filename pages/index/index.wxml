
<!--index.wxml-->
<view class="container">
  <view class="index-header">
    <view class="index-head position" bindtap="bindWeizhi">
      <image class="u101_img" src="/images/u101.png" mode="scaleToFill" ></image>
        <text class="index-head-hidden" hidden="{{name ? true : false}}">{{address}}</text>
      <text class="index-head-address">{{name}}</text>
      <image class="u109_img" src="/images/u109.png" mode="scaleToFill" ></image>
    </view>
    
      <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="index-head search" >
          <input placeholder="家政服务" bindinput="bindKeyInput" name="input"/>
          <!--<button form-type="submit" style="width:20px;height:30px;">
          </button>-->
          <icon type="search" form-type="submit" size="20"></icon><button form-type="submit">1</button>
        </view>
      </form>
  </view>
  <view class="selector">
    <view class="selectorNav" bindtap="bindtap">
        <view class="selectorNavT">
            <image src="../../images/u177.png" class="selectorImg"></image>
            <text>个人服务</text>
        </view>  
    </view>
    <view class="selectorNav" bindtap="bindtap">
        <view class="selectorNavT">
            <image src="../../images/u179.png" class="selectorImg"></image>
            <text>对公服务</text>
        </view>  
    </view>
    <view class="selectorNav" bindtap="bindtap">
        <view class="selectorNavT">
            <image src="../../images/u181.png" class="selectorImg"></image>
            <text>其他服务</text>
        </view>  
    </view>
    <navigator url="../category/category" class="selectorNav">
        <view class="selectorNavT">
            <image src="../../images/u183.png" class="selectorImg"></image>
            <text>全部商家</text>
        </view>  
    </navigator>
</view>
  <view class="index-home">附近商家</view>
  <view class="scroll-content" wx:if="{{show}}">
    <block wx:for="{{shop}}" wx:key="i" wx:for-index="i">
      <view bindtap="bindKeyJump" class="show" hover-class="navigator-hover" id="{{i}}">
      <image style="width:80px;height:80px" src="{{item.head}}"></image>
        <view class="show-list">
          <text class="title">{{item.name}}</text>
          <text>服务类型：{{item.type}}</text>
          <view class="show-list-last">
          <image class="u145_img" src="/images/u145.png"  mode="scaleToFill"></image>
           {{item.distance}} 
           <image class="u151_img" src="/images/u151.png" mode="scaleToFill"></image>
            {{item.likedAmount}}
            </view>
        </view>
      </view>
    </block>
  </view>

  <view class="scroll-content" wx:else>
    <block wx:for="{{shopSearch}}" wx:key="i" wx:for-index="i">
      <view class="show" hover-class="navigator-hover">
      <image style="width:80px;height:80px" src="{{item.head}}"></image>
        <view class="show-list">
          <text class="title">{{item.name}}</text>
          <text>服务类型：{{item.type}}</text>
          <view class="show-list-last">
          <image class="u145_img" src="/images/u145.png"  mode="scaleToFill"></image>
           {{item.distance}} 
           <image class="u151_img" src="/images/u151.png" mode="scaleToFill"></image>
            {{item.likedAmount}}
            </view>
        </view>
      </view>
    </block>
  </view>
</view>