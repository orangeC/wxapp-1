
<!--index.wxml-->
<view class="container">
  <view class="index-header">
    <view class="index-head position" bindtap="bindWeizhi">
      {{name}}
      <view hidden="{{name ? true : false}}">
        点击获取位置
      </view>
    </view>
    <view class="index-head search" >
      请输入服务类型
    </view>
  </view>
  <view class="nav">
    <view>
      <image src="http://b2.hucdn.com//upload/hmp/1609/14/23080112334484_120x80.png!100q50.webp" mode="scaleToFill" class="nav-img"></image>
      <text>个人服务</text>
    </view>
    <view>
      <image src="http://b2.hucdn.com//upload/hmp/1609/14/23080112334484_120x80.png!100q50.webp" mode="scaleToFill" class="nav-img"></image>
      <text>对公服务</text>
    </view>
    <view>
      <image src="http://b2.hucdn.com//upload/hmp/1609/14/23080112334484_120x80.png!100q50.webp" mode="scaleToFill" class="nav-img"></image>
      <text>XX服务</text>
    </view>
    <view>
      <image src="http://b2.hucdn.com//upload/hmp/1609/14/23080112334484_120x80.png!100q50.webp" mode="scaleToFill" class="nav-img"></image>
      <text>全部商家</text>
    </view>
  </view>
  <view class="index-home">附近商家</view>
  <view class="content">
    <block wx:for="{{showList}}" wx:key="i">
      <navigator class="show" url="../components/other" hover-class="navigator-hover">
      <image style="width:60px;height:60px;float:left" src="https://o97mkvfjm.qnssl.com/logo.png"></image>
        <view class="show-list">
          <text class="title">{{item.title}}</text>
          <p>服务类型：{{item.ser}}</p>
          <p>距离：{{item.distance}}</p>
        </view>
      </navigator>
    </block>
  </view>
  <view wx:for="{{arr}}" wx:for-item="fitem" wx:key="i" wx:for-index="i">
    <view class="myArray-{{i}}">{{i}}-{{fitem.message}}</view>
  </view>
  <view bindtap="bindWeizhi"></view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>