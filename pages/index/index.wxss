/**index.wxss**/

.index-header {
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx;
  height: 90rpx;
  background-color: #ffd300;
  font-size: 30rpx;
}

.index-head {
  height: 40rpx;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.index-head-hidden{
  margin-left: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.index-head-address {
  flex: 1;
  margin-left: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.u101_img {
  width: 15px;
  height: 21px;
}

.u109_img {
  width: 6px;
  height: 11px;
}

.u105_img {
  width: 19px;
  height: 15px;
  margin-right: 20rpx;
}

.position {
  color: #fff;
  background-color: #9d851e;
  width: 250rpx;
}

.search {
  color: #9d851e;
  background-color: #fff;
  width: 300rpx;
}

.search button{
  width: 20px;
  height: 30px;
  border-color: white
}
.search button icon{
  margin-left: -10px;

}

/*
**selector**
*/
.selector{
    padding:20rpx 30rpx;
    display: flex;
    flex-direction: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1rpx #f4f4f4 solid;
    border-bottom: 20rpx #f4f4f4 solid;
}
.selectorImg{
    width: 46px;
    height: 46px;
}
.selectorNav{
    display: flex;
    justify-content: center;
    font-size: 11pt;
    color: #888
}
.selectorNavT{
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center
}
.selectorNavT text{
    margin-top: 10rpx
}


.index-home {
  background-color: #fff;
  font-size: 29rpx;
  padding:20rpx 30rpx;
  border-bottom: 1px solid #ededf3;
  border-top: 10px solid #ededf3;
}

.scroll-content {
  background-color: #fff;
  height: 370px;
}

.show {
  display: flex;
  margin: 1rpx;
  padding: 30rpx 5rpx;
  border: 1px solid #ededf3;
  border-top: none;
}

.show-list {
  display: flex;
  flex-direction: column;
  padding: 7rpx;
}

.show-list .title {
  font-size: 0.9em;
  font-weight: 600;
  color: #000;
}

.show-list>text {
  margin: 2px 5px;
  font-size: 0.75em;
  line-height: 1.4;
}

.show-list-last {
  margin: 2px 5px;
  font-size: 0.75em;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.u145_img {
  width: 10px;
  height: 14px;
  margin-right: 10rpx;
}

.u151_img {
  width: 16px;
  height: 14px;
  margin-right: 10rpx;
  margin-left: 50rpx;
}

@media (min-width: 384px) {
  .show-list>text {
    margin: 2px 5px;
    line-height: 1.3;
  }

  .scroll-content {
    height: 350px;
  }
}

@media (max-width: 360px) {
  .show-list>text {
    margin: 2px 5px;
    line-height: 1.4;
  }

  .scroll-content {
    height: 340px;
  }
}

@media (max-width: 320px) {
  .show-list>text {
    margin: 3px 5px;
    line-height: 1.4;
  }

  .nav-img {
    height: 50px;
    width: 100%;
    margin-bottom: 15rpx;
  }

  .scroll-content {
    height: 200px;
  }
}
