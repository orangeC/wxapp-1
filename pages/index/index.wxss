.location{
  width: 90%;
  margin-left: 5px;
  color: #9dc3ea;
}

.rightIcon{
  width: 10%;
  text-align: right;
  color: #9dc3ea;
}
.image{
  width: 1em;
  height: 1em;
}

.index-home {
  background-color: #fff;
  font-size: 29rpx;
  padding:20rpx 30rpx;
  border-top: 10px solid #ededf3;
}

.shop{
  width: 100%;
  height: 100px;
  border-top: 1px solid #ededf3;
  display: flex;
  align-items: center;
}

.shopLeft{
  height: 80px;
  width: 80px;
}

.shopLeftImg{
  height: 80px;
  width: 80px;
}

.shopRight{
  height: 100px;
  padding-left: 15px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

