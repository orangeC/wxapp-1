.position {
  color: #fff;
  background-color: #9d851e;
  width: 250rpx;
}



.scroll-content {
  background-color: #fff;
  height: 370px;
}

.show {
  display: flex;
  margin: 1rpx;
  padding: 30rpx 5rpx;
  border: 1px solid #ededf3;
  border-top: none;
}

.show-list {
  display: flex;
  flex-direction: column;
  padding: 7rpx;
}

.show-list .title {
  font-size: 0.9em;
  font-weight: 600;
  color: #000;
}

.show-list>text {
  margin: 2px 5px;
  font-size: 0.75em;
  line-height: 1.4;
}

.show-list-last {
  margin: 2px 5px;
  font-size: 0.75em;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.u145_img {
  width: 10px;
  height: 14px;
  margin-right: 10rpx;
}

.u151_img {
  width: 16px;
  height: 14px;
  margin-right: 10rpx;
  margin-left: 50rpx;
}

@media (min-width: 384px) {
  .show-list>text {
    margin: 2px 5px;
    line-height: 1.3;
  }

  .scroll-content {
    height: 350px;
  }
}

@media (max-width: 360px) {
  .show-list>text {
    margin: 2px 5px;
    line-height: 1.4;
  }

  .scroll-content {
    height: 340px;
  }
}

@media (max-width: 320px) {
  .show-list>text {
    margin: 3px 5px;
    line-height: 1.4;
  }

  .nav-img {
    height: 50px;
    width: 100%;
    margin-bottom: 15rpx;
  }

  .scroll-content {
    height: 200px;
  }
}
