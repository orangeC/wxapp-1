/**index.wxss**/

.container {
  color: #9a9a9a;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.index-header {
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx;
  height: 90rpx;
  background-color: #ffd300;
  font-size: 30rpx;
}

.index-head {
  height: 60rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 60rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.position {
  color: #fff;
  background-color: #9d851e;
  width: 270rpx;
}

.search {
  color: #9d851e;
  background-color: #fff;
  width: 320rpx;
}

.nav {
  display: flex;
  border: #ddd solid 1px;
  padding: 25rpx;
  justify-content: space-around;
}

.nav>view {
  width: 90px;
  text-align: center;
  padding: 3rpx;
  font-size: 14px;
}

.nav-img {
  height: 50px;
  width: 90%;
  margin-bottom: 15rpx;
}

.index-home {
  font-size: 29rpx;
  padding: 15rpx;
  border-bottom: 1px solid #ededf3;
  border-top: 10px solid #ededf3;
}

.content {
  background-color: #fff;
}

.show {
  padding: 0.8rem;
  border-bottom: 1px solid #ededf3;
}

.show-list {
  margin-left: 4rem;
}

.show .title {
  color: #000;
  display: block;
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: 0.25rem;
}

.show p {
  line-height: 1.3;
  display: block;
  font-size: 0.7rem;
}
