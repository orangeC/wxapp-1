/* pages/components/other.wxss */

.container {
  background-color: #faf9fe;
}

.normal {
  display: flex;
  width: 100%;
  align-items: center;
  padding: 20rpx;
  font-size: 0.8em;
  border-bottom: 1px solid #e8eced;
  background-color: #fff;
  color: #636363;
}

.other-header {
  font-size: 0.9em;
  margin-bottom: 20rpx;
}

.other-header>image {
  width: 3em;
  height: 3em;
}

.other-title {
  color: #323232;
  width: 520rpx;
  padding-left: 20rpx;
}

.other-zan {
  display: flex;
  align-items: center;
  font-size: 0.9em;
  color: #323232;
  justify-content: flex-end;
}

.other-zan>image {
  width: 1.2em;
  height: 1.2em;
  margin-right: 10rpx;
}

.other-tel>image {
  width: 20px;
  height: 20px;
  padding-right: 10rpx;
}

.other-address>image {
  width: 20px;
  height: 20px;
  padding-right: 10rpx;
}

map {
  margin-bottom: 20rpx;
  width: 100%;
  height: 400rpx;
}

.other-service>image {
  width: 20px;
  height: 20px;
  padding-right: 10rpx;
}

.other-info {
  align-items: flex-start;
  padding-bottom: 60rpx;
}

.other-info>image {
  width: 20px;
  height: 20px;
  padding-right: 10rpx;
}

.other-info>text {
  flex: 0.95;
  line-height: 1.35;
}
