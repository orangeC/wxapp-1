<view class="container">
  <loading hidden="{{ hidden }}">加载中...</loading>
  <block wx:for="{{showList}}">
  <view class="other-header normal">
    <image src="https://qnmob.doubanio.com/view/movie_poster_cover/lpst/public/p2351313845.jpg?imageView2/0/q/80/w/9999/h/300/format/jpg" mode="scaleToFill"></image>
    <text class="other-title">{{item.title}}</text>
    <text>|</text>
    <view class="other-zan">
      <image src="/images/u147.png" mode="scaleToFill"></image>
    <text>点赞：{{item.heart}}</text>
    </view>
  </view>
  <view class="other-block"></view>
  <view class="other-tel normal">
  <image class="u243_img" src="/images/u243.png" mode="scaleToFill"></image>
  <text>{{item.tel}}</text>
  <image class="u249_img" src="/images/u249.png" mode="scaleToFill"></image>
  </view>
  <view class="other-address normal">
  <image src="/images/u245.png" mode="scaleToFill"></image>
  <text>{{item.address}}</text>
  </view>
  <map longitude="{{point.longitude}}" latitude="{{point.latitude}}" markers="{{markers}}"  scale="15" style="width: 100%; height:400rpx;"></map>
  <view class="other-service normal">
  <image src="/images/u263.png" mode="scaleToFill"></image>
  <text>服务类型：{{item.ser}}</text>
  </view>
  <view class="other-info normal">
  <image src="/images/u265.png" mode="scaleToFill"></image>
  <text>服务介绍：{{item.content}}</text>
  </view>
  </block>
</view>
