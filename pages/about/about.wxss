/* pages/about/about.wxss */

.container {
  font-family: 'Arial Normal', 'Arial';
  font-weight: 400;
  font-style: normal;
  line-height: normal;
  font-size: 0.8em;
  text-align: left;
  color: #797979;
}

.group {
  padding: 10rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-family: '华文细黑 Regular', '华文细黑';
  font-weight: 400;
  font-style: normal;
  font-size: 1.15em;
  color: #000;
  padding: 20rpx 0;
}

.content {
  text-indent: 2em;
}

.lastGroup {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-top: 50rpx;
  position: relative;
}

.lastGroup>.line {
  width: 20%;
  height: 2px;
  background-color: #199ed8;
}

.lastGroup>image {
  width: 80px;
  height: 80px;
}

.lastGroup>text {
  font-size: 0.8em;
  color: #666;
  word-wrap: break-word;
  padding-left: 30rpx;
}

.lastGroup>image::after {
  content: "";
  position: absolute;
  z-index: -1;
  width: 70%;
  height: 2px;
  bottom: 15px;
  right: 0;
  background-color: #199ed8;
}
