/* pages/components/other.wxss */


.normal{
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: flex-start;
    align-items: center;
    padding: 20rpx;
    font-size: .8em;
    border-bottom: 1px solid #edecf2;   
    background-color: #fff; 
}

.other-header{
    font-size: .9em;
}
.other-header>image{
    width: 50px;
    height: 50px;
    border-radius: 50%;
}
.other-title{
    color: #000;
    flex: 1;
    padding: 0 50rpx;
}
.other-zan{
    display: flex;
    flex-direction: column;
    flex: 0.6;
    justify-content: space-between;
    text-align: center;
    font-size: .75em;
}
.other-zan>image{
    width: 20px;
    height: 20px;
    margin: 5px auto;
}
.other-block{
    background-color: #edecf2;
    width: 100%;
    height: 10rpx;
    border-top: 1px solid #dedde2;
}
.other-tel>image{
    width: 20px;
    height: 20px;
    padding-right: 20rpx;
}
.other-tel>text{
    flex: 0.9;
    padding-left: 10rpx;
}
.other-address>image{
    width: 20px;
    height: 20px;
    padding-right: 20rpx;
}
.other-address>text{
    flex: 0.95;
    padding-left: 10rpx;
}
map{
    border-bottom: 25rpx solid #eeedf3; 
}
.other-service>image{
    width: 20px;
    height: 20px;
    padding-right: 20rpx;
}
.other-info{
    align-items: flex-start;
    padding-bottom: 60rpx;
}
.other-info>image{
    width: 20px;
    height: 20px;
    padding-right: 20rpx;
}
.other-info>text{
    flex: 0.95;
    line-height: 1.35
}
.more{
    background-color: #eeedf3;
    width: 100%;
    height: 280rpx;
}