image {
  width: 50rpx;
  height: 50rpx;
}

.top {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 3em;
  background-color: #4392ee;
}

.input {
  display: flex;
  background-color: #3c83d5;
  height: 2em;
  margin-left: 25rpx;
  margin-right: 25rpx;
  color: white;
  width: 100%;
  font-size: 0.9em;
  align-items: center;
  border-radius: 1.5em;
  padding: 0 1em;
}

.input image {
  width: 1em;
  height: 1em;
  margin-right: 10rpx;
}

.placeholder {
  font-size: 11pt;
  color: #fff;
}

.type {
  padding: 0 25rpx;
}

.type>view {
  color: #444;
  padding: 25rpx 0;
  border-bottom: 1px solid #ebeeef;
  display: flex;
  justify-content: space-between;
}

.list {
  display: flex;
}

.list>text {
  margin-left: 10rpx;
}

.number {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #999;
  font-size: 10pt;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.float {
  float: right;
  color: #999;
  font-size: 11pt;
}

.color {
  color: #fff;
}
