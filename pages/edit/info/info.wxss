.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-family: 'Arial Normal', 'Arial';
  font-weight: 400;
  font-style: normal;
  line-height: normal;
  font-size: 1em;
  color: #797979;
  padding: 20rpx;
}

.textarea {
padding-top: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  color: #666;
}

.last {
  width: 90%;
  height: 90rpx;
  margin: 400rpx auto;
  border-radius: 10px;
  background-color: #4392ee;
  color: #fff;
  font-size: 0.86em;
  display: flex;
  justify-content: center;
  align-items: center;
}
