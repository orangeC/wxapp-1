/* pages/noedit/noedit.wxss */

.container {
  color: #000;
}

.circle {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 160rpx;
  padding-top: 20rpx;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #d7d7d8;
  background-color: #fff;
  position: relative;
}

.circle-view {
  width: 170rpx;
  margin: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.circle>.line {
  position: absolute;
  top: 35%;
  width: 100px;
  height: 2px;
  background-color: #ededf2;
  z-index: 1;
}

.line-left {
  left: 20%;
}

.line-right {
  right: 20%;
}

.u177_img {
  position: relative;
  z-index: 10;
}

.u187_img {
  position: absolute;
  top: 25%;
  left: 28%;
}

.circle-text {
  margin-top: 40rpx;
  color: #666;
  font-size: 0.8em;
}

.circle-text-center {
  margin-top: 15rpx;
  color: #666;
  font-size: 0.8em;
}

.normal {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 55rpx;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 0;
  font-size: 0.8em;
  border-bottom: 1px solid #edecf2;
}
.u249_img {
  width: 30px;
  height: 30px;
  border-radius: 50%;
}

.edit-address {
  letter-spacing: -0.08em;
}

.checkboxGroup {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  font-family: 'Arial Normal', 'Arial';
  font-style: normal;
  font-size: 0.75em;
}

.last {
  width: 75%;
  height: 90rpx;
  margin: 0 auto;
  border-radius: 10px;
  background-color: #ffd200;
  color: #000;
  font-size: 0.86em;
  display: flex;
  justify-content: center;
  align-items: center;
}

